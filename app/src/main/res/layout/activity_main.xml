<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#818181">

    <TextView
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/fondo_lista_text_view"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:onClick="mostrar"
        android:id="@+id/boton_Mostrar_Nombres"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.950"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="@string/mostrar"
        android:background="@drawable/fondo_boton"
        android:textColor="#000000"/>

    <EditText
        android:background="@drawable/fondo_edittext"
        android:hint="@string/ingresa_un_nombre"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.800"
        app:layout_constraintHorizontal_bias="0.100"
        tools:ignore="Autofill,TextFields" />

    <Button
        android:onClick="agregar"
        android:textSize="10sp"
        android:text="@string/agregar"
        android:id="@+id/boton_agregar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.790"
        app:layout_constraintHorizontal_bias="0.900"
        android:background="@drawable/fondo_boton"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>