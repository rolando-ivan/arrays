<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="900dp"
    android:background="@drawable/fondo_dialogo"
    android:id="@+id/menu_desplegable"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="@string/lista_de_acciones"
        android:textColor="#2A2A2A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:id="@+id/filtrar_nombre"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:contentDescription="@string/foto"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:background="@drawable/extencion_mensaje"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/fondo_lista">

            <ImageView
                android:contentDescription="@string/foto"
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:background="@drawable/logostop"
                android:layout_marginEnd="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filtrar_nombres"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/libre"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:contentDescription="@string/foto"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:background="@drawable/extencion_mensaje"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/fondo_lista">

                <ImageView
                    android:contentDescription="@string/foto"
                    android:layout_width="95dp"
                    android:layout_height="100dp"
                    android:background="@drawable/logostop"
                    android:layout_marginEnd="10dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/libre"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
